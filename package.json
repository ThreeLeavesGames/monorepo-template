{
  "name": "typescript-monorepo",
  "version": "1.0.0",
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/next",
      "**/next/**",
      "**/react",
      "**/react/**",
      "**/react-dom",
      "**/react-dom/**",
      "**/react-native",
      "**/react-native/**",
      "**/react-native-web",
      "**/react-native-web/**",
      "**/react-native-svg",
      "**/react-native-svg/**",
      "**/firebase/**",
      "**/firebase",
      "**/@react-native-firebase",
      "**/@react-native-firebase/**",
      "**/react-native-cheerio",
      "**/react-native-cheerio/**",
      "**/cheerio",
      "**/cheerio/**"
        ]
  },
  "private": true,
  "dependencies": {},
  "scripts": {
    "build": "tsc --build --verbose",
    "kill": "rm -f yarn.lock package-lock.json && npx npkill",
    "web-cra": "npm run start -w @monorepo/web-cra"
  },
  "devDependencies": {
    "@types/node": "^20.12.3",
    "@types/react-native": "^0.63.2",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2"
  }
}
